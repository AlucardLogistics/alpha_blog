<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

  <div class="form-group">
    <div class="control-label col-sm-1">
      <%= f.label :name %>
    </div>
    
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
  </div>

<% end %>

<div class="col-xs-4 col-xs-offset-3">
  [ <b><%= link_to "Cancel request and return to welcome page", root_path %></b> ]
</div>
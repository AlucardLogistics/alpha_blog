<!-- loading _errors.html.erb and declaring the generiv var obj as an @article -->
<%= render 'shared/errors', obj: @user %>
<div class="row">
  <div class="col-xs-12">

    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
      <div class="form-group">
        <div class="control-label col-sm-1">
          <%= f.label :username %>
        </div>
        
        <div class="col-sm-6">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-1">
          <%= f.label :email %>
        </div>
        
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control",  placeholder: "Enter email " %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-sm-1">
          <%= f.label :password %>
        </div>
        
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control",  placeholder: "Enter password" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <!-- @user.new_record checks if its a new user and display SignUp otherwise it will display Update -->
          <%= f.submit (@user.new_record? ? "SignUp" : "Update", class: "btn btn-primary btn-lg") %>
        </div>
      </div>

    <% end %>
    
    <div class="col-xs-4 col-xs-offset-3">
      [ <b><%= link_to "Cancel request and return to welcome page", root_path %></b> ]
    </div>
  </div>
</div>
<div class="page-title">
  <h1>All Pet Lovers</h1>
</div>
<hr />

<div>
  <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>

<ul class="listing">
  <div class="row">
    <% @users.each do |user| %>
      <div class="well col-md-5 col-md-offset-1">
        <li><%= link_to profile_pic(user), user_path(user) %></li>
        <li class="article-title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li><small><%= pluralize(user.articles.count, "article") if user.articles  %></small></li>
        <% if logged_in? and current_user.admin? %>
          <li><%= link_to "Delete User", user_path(user), method: :delete, 
            data: {confirm: "Are you sure you want to delete this user?"} %></li>
        <% end%>
      </div>
    <% end %>
  </div>
</ul>

<div>
  <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>
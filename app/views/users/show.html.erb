<div class="page-title">
  <h1><%= @user.username  %></h1>
</div>
<hr />

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <!--gravatar_for function will be defined in the app/helpers dir-->
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>

<h4><%= @user.username %>'s articles</h4>
<%= render 'articles/article', obj: @user.articles %>
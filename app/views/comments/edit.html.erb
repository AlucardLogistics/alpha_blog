<div class="page-title">
  <h1>Edit comment</h1>
</div>
<hr />

<div align="left">
  <%= form_for([@article, @comment]) do |f| %>
    <%= f.text_field :content, style: "width: 250px;", placeholder: "Leave a comment...", autofocus: true %>
    <%= f.submit "Post", class: "btn btn-xs btn-primary" %>
  <% end %>
</div>
<hr />
<div class="col-xs-4 col-xs-offset-3">
  [ <b><%= link_to "Cancel request and return to the article", article_path(@article) %></b> ]
</div>